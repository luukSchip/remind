<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="2dp"
    android:layout_alignParentTop="true"
    android:background="@color/primary_dark_extra"
    android:id="@+id/details_container">

    <EditText
        android:id="@+id/reminderSetTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/lightest"
        android:textColorHint="@color/lightest_alpha"
        style="@style/AppTheme.EditText.Light"
        android:hint="Title"
        android:textSize="24dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/reminderSetDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.EditText.Light"
        android:textColor="@color/lightest"
        android:textSize="14dp"
        android:textColorHint="@color/lightest_alpha"
        android:inputType="textMultiLine"
        android:hint="Description" />
</LinearLayout>